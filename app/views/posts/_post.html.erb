<section class="post-heading" data-category-filter-target="item" data-category="<%= post.category %>">
  <div class="container">
    <div class="padding-vertical-xlarge">
      <div class="post-main_heading-wrapper">
        <div class="post_item-date"><%= post.created_at.strftime("%A,%-d %B %Y") %></div>
        <h1 class="post-title-<%= post.category %>"><%= post.title %></h1>
        <% if post.images.attached? || post.image_path.present? %>
          <div class="post-image">
            <%= image_tag post.main_image_url, alt: post.title, class: 'img-fluid' %>
          </div>
        <% end %>
        
        <div class="post-content">
          <%= post.markdown? %>
          <% if post.markdown? %>
            <%= @content.present? ? @content.html_safe : 'No content available' %>
          <% else %>
            <div class="paragraph-large">
              <%= post.content.body.to_s.html_safe %>
            </div>
            
            <% if post.tldr.body.present? %>
              <div class="tldr">
                <h3>TLDR</h3>
                <%= post.tldr.body.to_s.html_safe %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
