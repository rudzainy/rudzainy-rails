<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= post.slug %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= post.status %>
  </p>

  <% if controller_name == 'posts' && action_name == 'show' %>
    <p>
      <strong>Content:</strong>
      <%= post.content %>
    </p>
  <% end %>

</div>
